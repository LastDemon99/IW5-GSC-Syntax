{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
	"autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "/**",
            "close": " */",
            "notIn": [
                "string"
            ]
        }
    ],
	"surroundingPairs": [
		["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
		["'", "'"]
	],
    "wordPattern": {
        "pattern": "([a-zA-Z0-9_]+(?:\\\\[a-zA-Z0-9_]+)*)"
    }
}