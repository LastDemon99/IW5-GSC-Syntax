{
  "name": "codscript-parser",
  "description": "JISON Parser Generator for CoDScript",
  "version": "0.0.1",
  "publisher": "SE2Dev",
  "main": "./debug/main.js",
  
  "devDependencies": {
    "jison": "^0.4.17",
    "typescript": "^1.8.7"
  },
  
  "scripts": {
    "postinstall": "npm run compile",
    "compile": "jison src/codscript.jison -o out/codscript.js && tsc -d ./src/types.ts -outDir ./out",
    "compile-jison": "jison src/codscript.jison -o out/codscript.js",
    "compile-types": "tsc -d ./src/types.ts -outDir ./out"
  }
}
