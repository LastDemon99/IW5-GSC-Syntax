{
	"name": "cod-sense_server",
	"description": "CoD-Sense Language Server",
	"version": "0.0.2",
	"publisher": "SE2Dev",
	"engines": {
		"node": "*"
	},
	"dependencies": {
		"vscode-languageserver": "^1.4.0"
	},
	"devDependencies": {
		"copyfiles": "^0.2.1",
		"jison": "^0.4.17",
		"typescript": "^1.7.5"
	},
	"scripts": {
        "compile-parser": "jison src/parser/codscript.jison -o src/parser/codscript.js",
        "install-parser": "copyfiles -u 2 ./src/parser/codscript.js ../client/server/parser/",
            
        "postinstall": "npm run compile-parser && npm run install-parser",
        "compile": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc -p .",
        "watch": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc --watch -p ."
	}
}
